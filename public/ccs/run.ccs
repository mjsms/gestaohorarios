/* layout principal */
.chart-wrapper{
  height: 320px;        /* dá espaço fixo ao gráfico */
  position: relative;   /* Chart.js precisa disto */
  margin-bottom: 24px;
}
.chart-wrapper canvas{
  width: 100%;
  height: 100%;
}

/* tabela com scroll se crescer demasiado */
.table-wrapper{
  max-height: calc(100vh - 480px); /* cabe em ecrãs baixos */
  overflow-y: auto;
}
